// Team Expand Modal
let allTeamData = [];

function toggleTeamExpand() {
    const overlay = document.getElementById('team-expanded-overlay');
    overlay.classList.add('active');
    document.body.style.overflow = 'hidden';
    renderExpandedTeam();
}

function closeTeamExpand() {
    const overlay = document.getElementById('team-expanded-overlay');
    overlay.classList.remove('active');
    document.body.style.overflow = '';
}

async function renderExpandedTeam() {
    const container = document.getElementById('team-expanded-list');
    container.innerHTML = '<div style="text-align: center; padding: 40px; color: var(--text-muted);">ÿ¨ÿßÿ±Ÿä ÿßŸÑÿ™ÿ≠ŸÖŸäŸÑ...</div>';
    
    try {
        // Fetch all team members
        const response = await fetch('/api/users/team/', {
            credentials: 'include',
            headers: getAuthHeaders()
        });
        
        if (response.ok) {
            const data = await response.json();
            const members = data.results || data || [];
            
            if (members.length === 0) {
                container.innerHTML = '<div style="text-align: center; padding: 40px; color: var(--text-muted);">ŸÑÿß ŸäŸàÿ¨ÿØ ÿ£ÿπÿ∂ÿßÿ° ŸÅŸä ÿßŸÑŸÅÿ±ŸäŸÇ</div>';
                return;
            }
            
            const roleLabels = {
                'admin': 'ŸÖÿØŸäÿ± ÿßŸÑŸÜÿ∏ÿßŸÖ',
                'manager': 'ŸÖÿØŸäÿ± ŸÖÿ¥ÿ±Ÿàÿπ',
                'developer': 'ŸÖÿ∑Ÿàÿ±',
                'designer': 'ŸÖÿµŸÖŸÖ',
                'member': 'ÿπÿ∂Ÿà',
                'client': 'ÿπŸÖŸäŸÑ'
            };
            
            container.innerHTML = members.map((member, index) => {
                const name = member.first_name ? `${member.first_name} ${member.last_name || ''}`.trim() : member.email.split('@')[0];
                const initials = name.split(' ').map(n => n.charAt(0)).join('').substring(0, 2).toUpperCase();
                const tasks = member.tasks_count || member.tasks || 0;
                const completed = member.completed_tasks || member.completed || 0;
                const rate = tasks > 0 ? Math.round((completed / tasks) * 100) : 0;
                
                return `
                <div class="team-member-card" style="animation-delay: ${index * 0.1}s">
                    <div class="member-avatar">${initials}</div>
                    <div class="member-info">
                        <div class="member-name">${name}</div>
                        <div class="member-email">${member.email}</div>
                        <span class="member-role">${roleLabels[member.role] || member.role || 'ÿπÿ∂Ÿà'}</span>
                    </div>
                    <div class="member-stats">
                        <div class="member-stat">
                            <div class="member-stat-value">${tasks}</div>
                            <div class="member-stat-label">ÿßŸÑŸÖŸáÿßŸÖ</div>
                        </div>
                        <div class="member-stat">
                            <div class="member-stat-value">${completed}</div>
                            <div class="member-stat-label">ŸÖŸÉÿ™ŸÖŸÑÿ©</div>
                        </div>
                    </div>
                    <div class="member-progress">
                        <div class="member-rate">${rate}%</div>
                        <div class="member-progress-bar">
                            <div class="member-progress-fill" style="width: ${rate}%"></div>
                        </div>
                    </div>
                </div>
            `}).join('');
        } else {
            // Fallback to using stored team performance data
            renderStoredTeamData(container);
        }
    } catch (error) {
        console.error('Error loading team:', error);
        renderStoredTeamData(container);
    }
}

