<script>
// Auth Helper
function getAuthHeaders() {
    const token = localStorage.getItem('accessToken');
    return token ? { 'Authorization': 'Bearer ' + token } : {};
}

// Check authentication and redirect if needed
function checkAuth(response) {
    if (response.status === 401 || response.status === 403) {
        localStorage.removeItem('accessToken');
        localStorage.removeItem('refreshToken');
        window.location.href = '/login/?next=' + encodeURIComponent(window.location.pathname);
        return false;
    }
    return true;
}

// Load analytics data from real API
async function loadAnalytics() {
    try {
        // Fetch real dashboard stats
        const response = await fetch('/analytics/api/stats/', {
            credentials: 'include',
            headers: getAuthHeaders()
        });
        
        if (!checkAuth(response)) return;
        
        if (response.ok) {
            const data = await response.json();
            
            // Update task stats
            const tasks = data.tasks || {};
            document.getElementById('completed-tasks').textContent = tasks.completed || 0;
            document.getElementById('completion-rate').textContent = (tasks.completion_rate || 0) + '%';
            document.getElementById('avg-time').textContent = '3 ÿ£ŸäÿßŸÖ';
            document.getElementById('active-projects').textContent = data.projects?.active || 0;
            
            // Update change indicator
            const changeEl = document.querySelector('.stat-change');
            if (changeEl && tasks.change_percent !== undefined) {
                const isPositive = tasks.change_percent >= 0;
                changeEl.className = `stat-change ${isPositive ? 'positive' : 'negative'}`;
                changeEl.innerHTML = `
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="${isPositive ? '23 6 13.5 15.5 8.5 10.5 1 18' : '23 18 13.5 8.5 8.5 13.5 1 6'}"></polyline>
                        <polyline points="${isPositive ? '17 6 23 6 23 12' : '17 18 23 18 23 12'}"></polyline>
                    </svg>
                    ${isPositive ? '+' : ''}${tasks.change_percent}% ŸÖŸÜ ÿßŸÑÿ¥Ÿáÿ± ÿßŸÑŸÖÿßÿ∂Ÿä
                `;
            }
            
            // Update progress bars
            const total = tasks.total || 1;
            const completedPercent = Math.round((tasks.completed / total) * 100) || 0;
            const inProgressPercent = Math.round((tasks.in_progress / total) * 100) || 0;
            const overduePercent = Math.round((tasks.overdue / total) * 100) || 0;
            
            document.getElementById('completed-percent').textContent = completedPercent + '%';
            document.getElementById('inprogress-percent').textContent = inProgressPercent + '%';
            document.getElementById('overdue-percent').textContent = overduePercent + '%';
            
            // Update progress bar fills
            const completedFill = document.querySelector('.progress-item:nth-child(1) .progress-fill');
            const inProgressFill = document.querySelector('.progress-item:nth-child(2) .progress-fill');
            const overdueFill = document.querySelector('.progress-item:nth-child(3) .progress-fill');
            
            if (completedFill) completedFill.style.width = completedPercent + '%';
            if (inProgressFill) inProgressFill.style.width = inProgressPercent + '%';
            if (overdueFill) overdueFill.style.width = overduePercent + '%';
            
            // Render team performance from real data
            renderTeamPerformance(data.team?.performance || []);
            
        } else {
            console.error('Failed to load analytics:', response.status);
            // Fallback to sample data
            loadFallbackData();
        }
        
    } catch (error) {
        console.error('Error loading analytics:', error);
        loadFallbackData();
    }
}

function loadFallbackData() {
    document.getElementById('completed-tasks').textContent = '0';
    document.getElementById('completion-rate').textContent = '0%';
    document.getElementById('avg-time').textContent = '- ŸäŸàŸÖ';
    document.getElementById('active-projects').textContent = '0';
    document.getElementById('completed-percent').textContent = '0%';
    document.getElementById('inprogress-percent').textContent = '0%';
    document.getElementById('overdue-percent').textContent = '0%';
    renderTeamPerformance([]);
}

// Render team performance - now uses real data
